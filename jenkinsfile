pipeline {
    agent any
    environment {
        PATH = "${PATH}:${TF_PATH()}"
    }
    stages {
        stage('terraform init') {
            steps {
                sh "terraform init"
                sh "terraform apply"
            }
        }
    }
}
def TF_PATH(){
    def TF_HOME=tool name: 'Terraform', type: 'terraform'
    return TF_HOME
}